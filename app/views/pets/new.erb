<h1>Create a new Pet</h1>

<form action="/pets" method="POST">

<label>Name:</label>
 
  <br>
 
  <input type="text" name="pet[name]" id="pet_name">
 
  <br>

  <label>Choose an existing owner:</label>
 
  <br>

  <% @owners.each do |owner| %>
    <input id="<%= owner.id %>" type="checkbox" value="<%= owner.id %>" name="pet[owner_id]"><%= owner.name %></input>
  <% end %>

  <br>

    <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
      <input  type="text" id="owner_name" name="owner_name[name]"></input>
    <br>
  <input type="submit" value="Create Pet">


</form>